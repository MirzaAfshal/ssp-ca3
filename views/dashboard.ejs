		<div class="col-auto">
			<a id="sidepanel-toggler" class="sidepanel-toggler d-inline-block d-xl-none" href="#">
				<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30" role="img"><title>Menu</title><path stroke="currentColor" stroke-linecap="round" stroke-miterlimit="10" stroke-width="2" d="M4 7h22M4 15h22M4 23h22"></path></svg>
			</a>
		</div>
		<h2 style="color: #15a362;">FileName: <%=data.Filename%></h2>
		<h1 hidden><%=data.password%></h1>
		
        <div id="app-sidepanel" class="app-sidepanel sidepanel-hidden"> 
	        <div id="sidepanel-drop" class="sidepanel-drop"></div>
	        <div class="sidepanel-inner d-flex flex-column">
		        <a href="#" id="sidepanel-close" class="sidepanel-close d-xl-none">&times;</a>
		        <div class="app-branding">
		            <a class="app-logo" href="index.html"><img class="logo-icon me-2" src="../img/app-logo.svg" alt="logo"><span class="logo-text">FILES</span></a>
	
		        </div><!--//app-branding-->  
			    <nav id="app-nav-main" class="app-nav app-nav-main flex-grow-1">
				    <ul class="app-menu list-unstyled accordion" id="menu-accordion">
					  
					    <li class="nav-item has-submenu">
					        <!--//Bootstrap Icons: https://icons.getbootstrap.com/ -->
					        <a class="nav-link submenu-toggle active" href="#" data-bs-toggle="collapse" data-bs-target="#submenu-1" aria-expanded="true" aria-controls="submenu-1">
						        <span class="nav-icon">
						        <!--//Bootstrap Icons: https://icons.getbootstrap.com/ -->
						        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-files" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
	  <path fill-rule="evenodd" d="M4 2h7a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H4z"/>
	  <path d="M6 0h7a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2v-1a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H6a1 1 0 0 0-1 1H4a2 2 0 0 1 2-2z"/>
	</svg>
						         </span>
		                         <span class="nav-link-text">File Actions</span>
		                         <span class="submenu-arrow">
		                             <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chevron-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
	  <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
	</svg>
	                             </span><!--//submenu-arrow-->
					        </a><!--//nav-link-->
					        <div id="submenu-1" class="collapse submenu submenu-1 show" data-bs-parent="#menu-accordion">
						        <ul class="submenu-list list-unstyled">
							        <li class="submenu-item"><a class="submenu-link active createfile">Create File</a></li>
							        <li class="submenu-item"><a class="submenu-link modifyfile" onclick="fetchdata()">Modify File</a></li>
							        <li class="submenu-item"><a class="submenu-link viewrecords" onclick="DisplayData()">View Records</a></li>
						        </ul>
					        </div>
					    </li><!--//nav-item-->
					   
				    </ul><!--//app-menu-->
			    </nav><!--//app-nav-->
			   
	        </div><!--//sidepanel-inner-->
	    </div><!--//app-sidepanel-->
    </header><!--//app-header-->
    
    <div class="Content-containner">
		<div class="app-wrapper">
			<div class="app-content pt-3 p-md-3 p-lg-4">
				<div class="container-xl panel createfile-panel" style="justify-content: center;display: flex;">
					<div style="width:75%;margin-top:80px;">
						<form action="http://localhost:3000/uploaddata/<%=data.Filename +'-'+data.password%>" method="post" class="auth-form login-form" style="padding: 10px;background-color: #fff;box-shadow: 1px 1px 5px #acacac;">
							<h3 style="margin-top:10px;margin-bottom:30px;font-weight: lighter;">Insert Data</h3>        
							<div class="d-flex email mb-3">
								<input id="signin-email" name="signinemail" type="text" class="form-control signin-email" placeholder="Text" required="required" />
								<button style="margin-left:5px !important" onclick="CreateNodeVal(this)" class="btn app-btn-primary create-node-text theme-btn mx-auto">CREATE</button>
							</div>
							<div>
								<button type="submit" style="height: 45px;font-size: 16px;font-weight: normal;background-color: #000;" class="btn app-btn-primary w-100 theme-btn mx-auto">Submit</button>
							</div>
						</form>
					</div>
				</div>
				<div class="container-xl panel  modifyfile-panel" style="justify-content: center;display: none;">
					<div style="width:75%;margin-top:80px;">
						<form  class="auth-form login-form modify-form-conn" style="padding: 10px;background-color: #fff;box-shadow: 1px 1px 5px #acacac;">
									
							<!-- <div class="d-flex email mb-3">
								<input id="signin-email" name="signinemail" type="text" class="form-control signin-email" placeholder="Text" />
								<button style="margin-left:5px !important" onclick="UpdateNodes()" class="btn app-btn-primary create-node-text theme-btn mx-auto" name="update">Update</button>
								<button style="margin-left:5px !important" onclick="UpdateNodes()" class="btn text-white  btn-danger create-node-text theme-btn mx-auto" name="delete">DELETE</button>
							</div> -->
						</form>
					</div>
				</div>
				<div class="container-xl panel viewrecords-panel" style="justify-content: center; display: none;background-color: #fff;padding: 0px;">
					<div style="height:500px; text-align: center; padding: 15px; width: 100%; overflow: scroll; border: 1px solid #51b37f;">
						<table class="table table-striped" cellspacing="0" width="100%" style="margin-bottom:0px;box-shadow: 1px 1px 5px #b0b0b0;">	
						</table>
					</div>
				</div>
			</div><!--//app-content-->
		</div>
	</div>

    <script src="../plugins/bootstrap/js/bootstrap.min.js"></script>  
	<script>
		function CreateNodeVal(selectedNode){
			let el = selectedNode.parentElement.querySelector("input");
			let el_val = el.value;
			el.value="";
			selectedNode.parentElement.parentElement.insertBefore(selectedNode.parentElement.cloneNode(true),selectedNode.parentElement.parentElement.lastElementChild)
			selectedNode.remove()
			el.value=el_val;
		}
		document.querySelector(".createfile").addEventListener("click",(e)=>{
			document.querySelectorAll(".panel").forEach((e)=>{e.style.display="none"})
			document.getElementsByClassName("createfile-panel")[0].style.display="flex"
		});
		document.querySelector(".modifyfile").addEventListener("click",(e)=>{
			document.querySelectorAll(".panel").forEach((e)=>{e.style.display="none"})
			document.getElementsByClassName("modifyfile-panel")[0].style.display="flex"
		});
		document.querySelector(".viewrecords").addEventListener("click",(e)=>{
			document.querySelectorAll(".panel").forEach((e)=>{e.style.display="none"})
			document.getElementsByClassName("viewrecords-panel")[0].style.display="flex"
		});	
	</script>
    <!-- Page Specific JS -->
    <script src="../javascripts/app.js"></script> 
	<script src="../javascripts/popper.min.js"></script>

</body>
</html> 

